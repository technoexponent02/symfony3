{% extends 'backend/layouts/loginLayout.html.twig' %}
 
{% block title %}Choose Company{% endblock %}

{% block stylesheets %}{% endblock %}
{% block body %}
<div class="account-bg">
    <div class="card-box m-b-0">
        <div class="text-xs-center m-t-20">
            <a href="{{ path('admin_dashboard') }}" class="logo">
                <i class="zmdi zmdi-group-work icon-c-logo"></i>
                <span>Portalen</span>
            </a>
        </div>
        <div class="m-t-10 p-20">
            <div class="row">
                <div class="col-xs-12 text-xs-center">
                    <h6 class="text-muted text-uppercase m-b-0 m-t-0">Choose Company</h6>
                    {% if not form.vars.valid %}
                        <div class="alert alert-danger" role="alert">{{ form_errors(form.company_id) }}</div>
                    {% endif %}
                </div>
            </div>
            {{ form_start(form, { 'attr': {'class':'m-t-20', 'data-parsley-validate': '', 'novalidate': ''}}) }}
                <div class="form-group row">
                    {{ form_widget(form.company_id, {'attr': {'class': 'm-t-30'}}) }}
                </div>

                <div class="form-group text-center row m-t-10">
                    <div class="col-xs-12">
                        <button class="btn btn-success btn-block waves-effect waves-light" type="submit">Next</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>

        <div class="clearfix"></div>
    </div>
</div>
<!-- end card-box-->
{% endblock %}
{% block customscripts %}{% endblock %}