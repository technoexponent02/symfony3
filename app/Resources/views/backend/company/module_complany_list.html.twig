{% extends 'backend/layouts/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block stylesheets %}
<link href="{{ asset('backend_assets/plugins/RWD-Table-Patterns/css/rwd-table.min.css') }}" rel="stylesheet" type="text/css" media="screen">
{% endblock %}
{% block body %}
<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Company Module List</h4>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="card-box">
            <div class="table-rep-plugin">
                <div class="table-responsive" data-pattern="priority-columns">
                    <table id="tech-companies-1" class="table table-striped table-bordered">
                        <thead class="thead-default">
                            <tr>
                                <th>Company Name</th>
                                <th data-priority="1">Modules</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if companies|length > 0 %}
                                {% for company in companies %}
                                    {% set module_html='' %}
                                    {% for mdule in company.modules %}
                                        {% set module_html = module_html ~ mdule.moduleName ~ ', ' %}
                                    {% endfor %}
                                    <tr>
                                        <td>{{ company.companyName }}</td>
                                        <td>{{ module_html|trim(', ', 'right') }}</td>
                                            <td><a href="{{ path('admin_company_edit_module', {'id': company.id }) }}"><i class="fa fa-pencil"></i></a>
                                            </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr><td colspan="4">No Companies Found</td></tr>
                            {% endif %}                            
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
</div>
<!-- end row -->

{% endblock %}
{% block customscripts %}
    <!-- responsive-table-->
    <script src="{{ asset('backend_assets/plugins/RWD-Table-Patterns/js/rwd-table.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        
    </script>
{% endblock %}