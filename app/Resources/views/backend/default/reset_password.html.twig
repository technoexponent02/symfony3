{% extends 'backend/layouts/loginLayout.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block stylesheets %}{% endblock %}
{% block body %}
    <div class="account-bg">
        <div class="card-box m-b-0">
            <div class="text-xs-center m-t-20">
                <a href="{{ path('admin_dashboard') }}" class="logo">
                    <i class="zmdi zmdi-group-work icon-c-logo"></i>
                    <span>Portalen</span>
                </a>
            </div>
            <div class="m-t-10 p-20">
                <div class="row">
                    <div class="col-xs-12 text-xs-center">
                        <h6 class="text-muted text-uppercase m-b-0 m-t-0">Forgot password</h6>
                        {% for message in app.session.flashBag.get('noEmailFound') %}
                            <div class="alert alert-warning" role="alert">{{ message }}</div>
                        {% endfor %}

                    </div>
                </div>
                {{ form_start(resetPassForm, {'attr': { 'class': 'm-t-20', 'data-parsley-validate': '', 'novalidate': '' } }) }}

                {{ form_errors(resetPassForm) }}

                <div class="form-group row">
                    <div class="col-xs-12">
                        {{ form_widget(resetPassForm.password.first, { 'attr': { 'class': 'form-control', 'placeholder': 'Password' } }) }}
                        {{ form_errors(resetPassForm.password.first) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-12">
                        {{ form_widget(resetPassForm.password.second, { 'attr': { 'class': 'form-control', 'placeholder': 'Confirm Password', 'data-parsley-equalto': '#reset_password_password_first', 'data-parsley-error-message': 'Confirm password do not match' } }) }}
                        {{ form_errors(resetPassForm.password.second) }}
                    </div>
                </div>
                <div class="form-group text-center row m-t-10">
                    <div class="col-xs-12">
                        {{ form_widget(resetPassForm.reset, { 'label': 'Reset Password', 'attr': { 'class': 'btn btn-success btn-block waves-effect waves-light' } }) }}
                    </div>
                </div>
                {{ form_end(resetPassForm) }}

            </div>

            <div class="clearfix"></div>
        </div>
    </div>
    <!-- end card-box-->

    <div class="m-t-20">
        <div class="text-xs-center">
            <p class="text-white">Don't have an account? <a href="javascript:void(0){# pages-register.html #}" class="text-white m-l-5"><b>Sign Up</b></a></p>
        </div>
    </div>
{% endblock %}
{% block customscripts %}
    <script type="text/javascript" src="{{ asset('backend_assets/plugins/parsleyjs/parsley.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('form').parsley();
        });
    </script>
{% endblock %}